{
  // Максимальная длина строки
  printWidth: 100,
  // Отступ
  tabWidth: 2,
  // Добавлять точку с запятой
  semi: true,
  // Использовать одинарные кавычки
  singleQuote: false,
  // Одинарные кавычки JSX
  jsxSingleQuote: false,
  // Перенос тега в JSX ">"
  jsxBracketSameLine: false,
  // Добавить запятую для последнего свойства в массиве / объекте
  trailingComma: "es5",
  // Пробелы между скобками в объектх "{ foo: bar }"
  bracketSpacing: true,
  // Добавляет кавычки для поля объекта - если необходимы
  quoteProps: "as-needed",
  // Добавляет скобки функции стрелки "(x) => x" или "x => x"
  arrowParens: "always",
}
